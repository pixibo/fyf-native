                    android:visibility="gone"
                    android:textColor="@color/grey_3"
                    android:padding="15dp"
                    android:id="@+id/tv_brand_category_8" />


            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="65dp"
                android:layout_alignParentBottom="true">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_back_brand_category"
                    android:background="@drawable/ic_back"/>



                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:id="@+id/tv_brand_category_skip"
                    android:layout_toStartOf="@+id/tv_brand_category_continue"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/apercu_regular"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="@string/apparel_fit_skip"
                    />


                <TextView
